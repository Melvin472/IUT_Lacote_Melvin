<Window x:Class="WpfRobotInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRobotInterface"  
        xmlns:oscillo="clr-namespace:WpfOscilloscopeControl;assembly=WpfOscilloscopeControl"
        xmlns:AsservDisplay="clr-namespace:WpfAsservissementDisplay;assembly=WpfAsservissementDisplay" 
        xmlns:map="clr-namespace:WpfWorldMap_NS;assembly=WpfWorldMap"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000"
        Background="#FF0D0D0D"
        Foreground="#39FF14"
        FontFamily="Consolas">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourcesWPF.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Bloc émission/réception -->
        <StackPanel Grid.ColumnSpan="1" VerticalAlignment="Center" Margin="5">
            <GroupBox Header="Emission" BorderBrush="#39FF14" Margin="5" Foreground="#39FF14">
                <TextBox x:Name="textboxEmission"
                         KeyUp="TextBoxEmission_KeyUp"
                         Height="60"
                         FontSize="12"
                         Background="#FF1A1A1A"
                         Foreground="#39FF14"
                         BorderBrush="#39FF14"
                         TextChanged="textboxEmission_TextChanged" />
            </GroupBox>

            <GroupBox Header="Reception" BorderBrush="#39FF14" Margin="5" Foreground="#39FF14">
                <TextBox x:Name="textboxReception"
                         AcceptsReturn="True"
                         Height="60"
                         FontSize="12"
                         Background="#FF1A1A1A"
                         Foreground="#39FF14"
                         BorderBrush="#39FF14"/>
            </GroupBox>
        </StackPanel>

        <!-- Oscilloscope -->
        <oscillo:WpfOscilloscope x:Name="oscilloSpeed" Grid.Row="0" Grid.Column="2" Loaded="oscilloSpeed_Loaded" Margin="10"/>

        <!-- Carte -->
        <Grid Grid.Row="0" Grid.Column="3">
            <!-- Carte du robot -->
            <map:WpfWorldMap x:Name="worldMap" Loaded="worldMap_Loaded"/>

            <!-- Calque du ghost -->
            <Canvas x:Name="ghostLayer" IsHitTestVisible="False" />
        </Grid>

        <!-- Panneau central : boutons -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Width="100">

            <!-- Boutons de base -->
            <Button x:Name="buttonSend" Content="Send" Margin="5" Click="ButtonSend_Click" KeyUp="TextBoxEmission_KeyUp"
                    Height="40" Background="#FF1A1A1A" Foreground="#39FF14" BorderBrush="#39FF14"/>
            <Button x:Name="buttonTest" Content="Test" Margin="5" Click="ButtonTest_Click"
                    Height="40" Background="#FF1A1A1A" Foreground="#39FF14" BorderBrush="#39FF14"/>
            <Button x:Name="buttonClear" Content="Delete" Margin="5" Click="buttonClear_Click"
                    Height="40" Background="#FF1A1A1A" Foreground="#39FF14" BorderBrush="#39FF14"/>
            <Button x:Name="buttonSetUpPid" Content="Set-Up PID" Margin="5" Click="buttonSetUpPid_Click"
                    Height="40" Background="#FF1A1A1A" Foreground="#39FF14" BorderBrush="#39FF14"/>
            <Button x:Name="buttonLock" Content="Lock" Click="ButtonLock_Click"
        Width="80" Height="30" Background="LightGray" Margin="10"/>


            <!-- 🟩 Nouveau bloc : contrôles du ghost -->
            <GroupBox Header="Ghost Control" BorderBrush="#39FF14" Margin="5" Foreground="#39FF14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="buttonUp" Content="↑" Grid.Row="0" Grid.Column="1" Click="ButtonUp_Click"
                            Width="30" Height="30" Background="#FF1A1A1A" Foreground="#39FF14" BorderBrush="#39FF14"/>
                    <Button x:Name="buttonLeft" Content="←" Grid.Row="1" Grid.Column="0" Click="ButtonLeft_Click"
                            Width="30" Height="30" Background="#FF1A1A1A" Foreground="#39FF14" BorderBrush="#39FF14"/>
                    <Button x:Name="buttonDown" Content="↓" Grid.Row="1" Grid.Column="1" Click="ButtonDown_Click"
                            Width="30" Height="30" Background="#FF1A1A1A" Foreground="#39FF14" BorderBrush="#39FF14"/>
                    <Button x:Name="buttonRight" Content="→" Grid.Row="1" Grid.Column="2" Click="ButtonRight_Click"
                            Width="30" Height="30" Background="#FF1A1A1A" Foreground="#39FF14" BorderBrush="#39FF14"/>
                </Grid>
            </GroupBox>
        </StackPanel>

        <!-- Bloc Moteurs -->
        <GroupBox Header="Moteur" Grid.Column="0" Grid.Row="1" BorderBrush="#00FF7F" Foreground="#39FF14" Width="160">
            <StackPanel VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <Label Content="MotGauche :" />
                    <Label Name="MotGauche" Content="0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="MotDroit :" />
                    <Label Name="VMotDroit" Content="0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="XPos :" />
                    <Label Name="ValXPos" Content="0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="YPos :" />
                    <Label Name="ValYPos" Content="0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Angle :" />
                    <Label Name="ValAngle" Content="0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="VitAng :" />
                    <Label Name="ValVitAng" Content="0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="VitLin :" />
                    <Label Name="ValVitLin" Content="0" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Bloc télémètres IR -->
        <GroupBox Header="Télémètres IR" Grid.Row="1" Grid.Column="1" BorderBrush="#00FF7F" Foreground="#39FF14">
            <StackPanel VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal">
                    <Label Content="IRExGauche : " />
                    <Label Name="ValueIRExGauche" Content="0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="IRGauche : " />
                    <Label Name="ValueIRGauche" Content="0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="IRCentre : " />
                    <Label Name="ValueIRCentre" Content="0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="IRDroit : " />
                    <Label Name="ValueIRDroit" Content="0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="IRExDroit : " />
                    <Label Name="ValueIRExDroit" Content="0" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Asservissement -->
        <AsservDisplay:AsservissementRobot2RouesDisplayControl 
            x:Name="asservSpeedDisplay" 
            Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
